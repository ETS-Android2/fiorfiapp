<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginHelp"
    android:background="@drawable/background">


    <Button
        android:id="@+id/buttonnextregister3"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginTop="206dp"
        android:background="@drawable/input_register"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/beyaz"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/input_field"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username, email or phone"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/hint"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="139dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="675dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="53dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/opensans"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="Find Your Account"
        android:textColor="@color/siyah"
        android:textSize="25dp"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/opensans"
        android:text="Enter your username or the email or phone \n number linked to your account."
        android:textAlignment="center"
        android:textColor="@color/koyugri"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />
</androidx.constraintlayout.widget.ConstraintLayout>